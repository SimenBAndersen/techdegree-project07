.grid-33
  .app--section
    ul.app--user--list
      each friend in twitter.follows
        li
          .circle--fluid
            .circle--fluid--cell.circle--fluid--primary
              a.app--tweet--author(href=`https://twitter.com/${friend.username}`)
                .app--avatar(style=`background-image: url(${friend.image})`)
                  img(src=`${friend.image}`)
                h4= friend.name
                p= friend.username
            .circle--fluid--cell
              a.button.button-text Unfollow
